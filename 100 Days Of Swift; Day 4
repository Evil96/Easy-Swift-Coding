import UIKit
//For loops
let count = 1...10

for _ in count{
    print("I need to print this \(count) times")
}

//While loops
var number = 1

while number <= 6 {
    print("duck")
    number += 1
}

print("Goose!")

//Repeat loops
repeat {
    print(number)
    number += 1
} while number <= 20

print("Ready or not, here I come!")

//Exiting loops
var countDown = 10
while countDown >= 0 {
    print(countDown)

    if countDown == 4 {
        print("I'm bored. Let's go now!")
        break //By this condition, we are breaking the loop on count on 4
    }

    countDown -= 1
}

//Exiting multiple loops
outerLoop: for i in 1...10 {
    for j in 1...10 {
        let product = i * j
        print ("\(i) * \(j) is \(product)")

        if product == 50 {
            print("It's a bullseye!")
            break outerLoop
        }
    }
}

//Skipping items
for i in 1...10 {
    if i % 2 == 1 {
        continue
    }

    print(i)
}

//Infinite loops
var counter = 0

while true { //True will always gonna be true, so it becomes infinte
    print(" . ")
    counter += 1
     if counter == 273 { //UNTIL you get somewhere to BREAK this infinte loop
        break
    }
}
